<style>
  /* --- CONTAINER UTAMA --- */
  .profile-container {
    max-width: 1000px;
    margin: 4rem auto; /* Jarak dari navbar */
    background: rgba(10, 10, 10, 0.6);
    border: 1px solid #ff003c;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(255, 0, 60, 0.1);
    backdrop-filter: blur(10px);
  }

  /* --- HEADER MERAH DI ATAS --- */
  .section-header {
    background: #ff003c;
    padding: 0.5rem 1.5rem;
  }

  .section-header h2 {
    margin: 0;
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* --- LAYOUT FLEXBOX (KIRI & KANAN) --- */
  .profile-content {
    display: flex;
    flex-wrap: wrap; /* Agar responsif di HP */
    padding: 2rem;
    gap: 3rem;
  }

  .left-col {
    flex: 2; /* Mengambil porsi lebih lebar (66%) */
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .right-col {
    flex: 1; /* Mengambil porsi lebih kecil (33%) */
    min-width: 250px;
  }

  /* --- TYPOGRAPHY & LABEL --- */
  .label {
    display: block;
    color: #ff003c;
    font-family: monospace;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    opacity: 0.8;
  }

  p {
    color: #e0e0e0;
    line-height: 1.6;
    font-size: 1rem;
    margin: 0;
  }

  /* --- SOCIAL LINKS --- */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid #ff003c;
    border-radius: 8px;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    background: rgba(0,0,0,0.3);
  }

  .icon-btn:hover {
    background: #ff003c;
    box-shadow: 0 0 10px #ff003c;
    transform: translateY(-3px);
  }

  /* --- TECH BADGES --- */
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid #333;
    border-radius: 50px;
    background: #0a0a0a;
    color: white;
    font-size: 0.9rem;
    transition: 0.3s;
  }

  .badge:hover {
    border-color: #ff003c;
    box-shadow: 0 0 10px rgba(255, 0, 60, 0.2);
  }

  /* --- PORTRAIT IMAGE & FRAME --- */
  .image-frame {
    position: relative;
    border: 2px solid #333;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1 / 1; /* Kotak sempurna */
    width: 100%; /* Pastikan dia mengikuti lebar container */
  }

  .image-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;

    transition: transform 0.5s ease;
  }
  
  /* Bonus: Efek Garis Scanline ala Cyberpunk */
  .scanline {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.3) 51%);
    background-size: 100% 4px;
    pointer-events: none;
    opacity: 0.3;
  }

  /* --- RESPONSIVE UNTUK INFINIX HOT 50 --- */
  @media (max-width: 768px) {
    .profile-content {
      flex-direction: column-reverse; /* Gambar di atas saat di HP */
      gap: 2rem;
      padding: 1.5rem;
    }
    
    .right-col {
      width: 100%;
      max-width: 300px;
      margin: 0 auto; /* Tengah di HP */
    }
  }
</style>