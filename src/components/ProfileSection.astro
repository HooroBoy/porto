          <a href="#" class="icon-btn" aria-label="LinkedIn">üíº</a>
          <a href="#" class="icon-btn" aria-label="GitHub">üê±</a>
          <a href="#" class="icon-btn" aria-label="Discord">üéÆ</a>
          <a href="#" class="icon-btn" aria-label="CV">üìÑ</a>
          <a href="#" class="icon-btn" aria-label="itch.io">üëæ</a>
        </div>
      </div>

      <div class="info-block">
        <span class="label">Techstack</span>
        <div class="tech-badges">
          <span class="badge"><span class="icon">üéÆ</span> Unity</span>
          <span class="badge"><span class="icon">üé®</span> Figma</span>
          <span class="badge"><span class="icon">üñåÔ∏è</span> Clip Studio</span>
          <span class="badge"><span class="icon">üßä</span> Blender</span>
          <span class="badge"><span class="icon">üñºÔ∏è</span> Photoshop</span>
          <span class="badge"><span class="icon">üöÄ</span> Astro</span>
        </div>
      </div>
    </div>

    <div class="right-col">
      <span class="label">.Portrait (Slide Me! ‚ÜîÔ∏è)</span>

      <div class="image-frame before-after-container" id="ba-slider">
        <Image
          src={realImg}
          alt="Real Version"
          width={400}
          height={400}
          class="ba-img bg-img"
        />

        <div class="ba-foreground-wrapper">
          <Image
            src={animeImg}
            alt="Anime Version"
            width={400}
            height={400}
            class="ba-img fg-img"
          />
        </div>

        <input
          type="range"
          min="0"
          max="100"
          value="50"
          class="ba-range-input"
          id="ba-range"
          aria-label="Toggle between anime and real version"
        />

        <div class="ba-handle-line"></div>

        <div class="scanline"></div>
      </div>
    </div>
  </div>
</section>

<script>
  const sliderContainer = document.getElementById("ba-slider");
  const rangeInput = document.getElementById("ba-range");

  if (sliderContainer && rangeInput) {
    rangeInput.addEventListener("input", (e) => {
      // TypeScript casting agar tidak error
      const target = e.target as HTMLInputElement;
      const sliderValue = target.value;

      // Update variabel CSS --position secara realtime
      sliderContainer.style.setProperty("--position", `${sliderValue}%`);
    });
  }
</script>

<style>
  /* --- CONTAINER UTAMA --- */
  .profile-container {
    max-width: 1000px;
    margin: 4rem auto;
    background: rgba(10, 10, 10, 0.6);
    border: 1px solid #ff003c;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(255, 0, 60, 0.1);
    backdrop-filter: blur(10px);
  }

  /* --- HEADER MERAH --- */
  .section-header {
    background: #ff003c;
    padding: 0.5rem 1.5rem;
  }

  .section-header h2 {
    margin: 0;
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* --- LAYOUT --- */
  .profile-content {
    display: flex;
    flex-wrap: wrap;
    padding: 2rem;
    gap: 3rem;
  }

  .left-col {
    flex: 2;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .right-col {
    flex: 1;
    min-width: 250px;
  }

  /* --- TYPOGRAPHY --- */
  .label {
    display: block;
    color: #ff003c;
    font-family: monospace;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    opacity: 0.8;
  }

  p {
    color: #e0e0e0;
    line-height: 1.6;
    font-size: 1rem;
    margin: 0;
  }

  /* --- SOCIAL LINKS --- */
  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid #ff003c;
    border-radius: 8px;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    background: rgba(0, 0, 0, 0.3);
  }
  .icon-btn:hover {
    background: #ff003c;
    box-shadow: 0 0 10px #ff003c;
    transform: translateY(-3px);
  }

  /* --- TECH BADGES --- */
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }
  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid #333;
    border-radius: 50px;
    background: #0a0a0a;
    color: white;
    font-size: 0.9rem;
    transition: 0.3s;
  }
  .badge:hover {
    border-color: #ff003c;
    box-shadow: 0 0 10px rgba(255, 0, 60, 0.2);
  }

  /* ========================================= */
  /* --- STYLE KHUSUS BEFORE/AFTER SLIDER --- */
  /* ========================================= */

  .image-frame {
    position: relative;
    border: 2px solid #333;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    width: 100%;

    /* Variable Posisi Slider (Default 50%) */
    --position: 50%;
  }

  /* Style dasar gambar slider */
  .ba-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    pointer-events: none; /* Agar klik tembus ke input slider */
    user-select: none;
  }

  /* Gambar Belakang (Real) */
  .bg-img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  /* Wrapper Gambar Depan (Anime) - Yang dipotong */
  .ba-foreground-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    /* Memotong gambar dari kanan berdasarkan slider */
    clip-path: inset(0 calc(100% - var(--position)) 0 0);
    transition: none;
  }

  /* Input Range (Controller Transparan) */
  .ba-range-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    opacity: 0; /* Tidak terlihat */
    cursor: ew-resize;
    margin: 0;
  }

  /* Garis Neon Visual */
  .ba-handle-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: var(--position);
    width: 3px;
    background: #ff003c;
    box-shadow: 0 0 15px #ff003c;
    z-index: 5;
    pointer-events: none;
    transform: translateX(-50%);
    transition: none;
  }

  /* Scanline Decoration */
  .scanline {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 50%,
      rgba(0, 0, 0, 0.3) 51%
    );
    background-size: 100% 4px;
    pointer-events: none;
    opacity: 0.3;
    z-index: 4;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .profile-content {
      flex-direction: column-reverse;
      gap: 2rem;
      padding: 1.5rem;
    }
    .right-col {
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
  }
</style>
